{% import "_includes/forms" as forms %}

{% do view.registerAssetBundle("tde\\craft\\geoaddress\\assetbundles\\geoaddressfield\\GeoAddressFieldAsset") %}

<div class="geoadress">
	<div class="geoaddress--name">
		{{ forms.textField({
			id: name ~ '-name',
			name: name ~ '[name]',
			value: (value.name is defined) ? value.name : '',
			placeholder: 'Name'|t('geoaddress')
		}) }}
	</div>
	<div class="geoaddress--street">
		{{ forms.textField({
			id: name ~ '-street',
			name: name ~ '[street]',
			value: (value.street is defined) ? value.street : '',
			placeholder: 'Address'|t('geoaddress')
		}) }}
	</div>
	<div class="geoaddress--city-zip">
		{{ forms.textField({
			id: name ~ '-zip',
			name: name ~ '[zip]',
			class: "geoaddress-zip",
			value: (value.zip is defined) ? value.zip : '',
			placeholder: 'Zipcode'|t('geoaddress'),
		}) }}
		{{ forms.textField({
			id: name ~ '-city',
			name: name ~ '[city]',
			class: "geoaddress-city",
			value: (value.city is defined) ? value.city : '',
			placeholder: 'City'|t('geoaddress'),
		}) }}
	</div>
	<div class="geoaddress--country">
		{{ forms.selectField({
			id: name ~ '-country',
			name: name ~ '[country]',
			options: geoAddressCountries(),
			value: (value.country is defined) ? value.country : ''
		}) }}
	</div>
	<div class="geoaddress--lat-lng">
		{{ forms.textField({
			id: name ~ '-lat',
			name: name ~ '[lat]',
			class: 'geoaddress-lat',
			value: (value.lat is defined) ? value.lat : '',
			disabled: true,
			placeholder: 'No coordinates found yet'|t('geoaddress')
		}) }}

		{{ forms.textField({
			id: name ~ '-lng',
			name: name ~ '[lng]',
			class: 'geoaddress-lng',
			value: (value.lng is defined) ? value.lng : '',
			disabled: true,
			placeholder: 'No coordinates found yet'|t('geoaddress')
		}) }}
	</div>
</div>
